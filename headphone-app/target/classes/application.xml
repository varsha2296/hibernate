<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean class="com.xworkz.headphone.Headphone" id="headphone">
		<constructor-arg name="brand"
			value="${headphone.brand}" />
		<constructor-arg name="price"
			value="${headphone.price}" />
		<constructor-arg name="color"
			value="${headphone.color}" />
	</bean>

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
		id="propertyPlaceholderConfigurer">
		<property name="locations" value="application.properties"></property>
	</bean>
</beans>